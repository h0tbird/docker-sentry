{
  "id": "/sentry/web",
  "instances": 1,
  "cpus": 1,
  "mem": 1024,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "sentry"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "sentry:8.1.2",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 9000,
          "hostPort": 0
        }
      ],
      "privileged": false,
      "forcePullImage": false,
      "parameters": [
        { "key": "env", "value": "SENTRY_REDIS_HOST=redis-sentry.marathon" },
        { "key": "env", "value": "SENTRY_POSTGRES_HOST=postgres-sentry.marathon" },
        { "key": "env", "value": "SENTRY_DB_USER=sentry" },
        { "key": "env", "value": "SENTRY_DB_PASSWORD=secret" },
        { "key": "env", "value": "SENTRY_SECRET_KEY=secret-goes-here" }
      ]
    }
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  },
  "dependencies": [
    "/sentry/postgres",
    "/sentry/redis"
  ]
}
